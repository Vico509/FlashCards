<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddCardActivity">

    <EditText
        android:id="@+id/editTextFieldQuestion"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="20dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:hint="@string/enter_question"/>

    <EditText
        android:id="@+id/editTextFieldAnswer"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="20dp"
        android:layout_below="@id/editTextFieldQuestion"
        android:ems="10"
        android:inputType="text"
        android:hint="@string/enter_answer" />


    <ImageView
        android:id="@+id/save_button_image"
        android:layout_width="80dp"
        android:layout_height="86dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp"
        android:contentDescription="@string/toggle_choices_visibility"
        android:src="@drawable/icon_save_button" />

    <ImageView
        android:id="@+id/cancel_button_image"
        android:layout_width="100dp"
        android:layout_height="86dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp"
        android:contentDescription="@string/toggle_choices_visibility"
        android:src="@drawable/icon_button_cancel" />

</RelativeLayout>